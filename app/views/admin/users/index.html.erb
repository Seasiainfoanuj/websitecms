<%= render 'admin/shared/header' %>

<div class="page-container row">
  <%= render 'admin/shared/sidebar' %>

  <div class="page-content">
    <div class="content">
      <div class="page-title">
        <i class="fa fa-users"></i>
        <h3>All <span class="semi-bold">Users</span> <%= link_to 'Add New', new_admin_user_path, class: "btn btn-primary btn-mini" %></h3>
      </div>

      <div class="row">
        <div class="col-md-12">
          <div class="grid simple">
            <div class="grid-title no-border">
              <h4>All <span class="semi-bold">Users</span></h4>
            </div>

            <div class="grid-body no-border">
              <%= render "table" %>
              <%= render 'admin/shared/pagination', model: @users %>
            </div><!-- /grid-body -->
          </div><!-- /grid -->
        </div><!-- /col-md-12 -->
      </div><!-- /row -->
    </div><!-- /content -->
  </div><!-- /page-content -->

</div><!-- /page-container -->
