<div class="header navbar navbar-inverse ">
  <div class="navbar-inner">
    <div class="header-seperation">
      <ul class="nav pull-left notification-center" id="main-menu-toggle-wrapper" style="display:none">
        <li class="dropdown">
          <a id="main-menu-toggle" href="#main-menu"  class="" > <div class="iconset top-menu-toggle-white"></div> </a>
        </li>
      </ul>

      <%# logo %>
      <%= link_to image_tag("admin/logo.png", class: "logo", "data-src" => "#{image_path "admin/logo.png"}", "data-src-retina" => "#{image_path "admin/logo2x.png"}"), root_path %>
      <%# /logo %>

      <ul class="nav pull-right notification-center">
        <li class="dropdown" id="header_task_bar">
          <%= link_to content_tag(:div, "", class: "iconset top-home"), root_path, class: "dropdown-toggle active" %>
        </li>
      </ul>
    </div><%# /header-seperation %>

    <div class="header-quick-nav" >
      <div class="pull-left">
        <ul class="nav quick-section">
          <li class="quicklinks">
            <a href="#" class="" id="layout-condensed-toggle" ><div class="iconset top-menu-toggle-dark"></div></a>
          </li>
          <li class="m-r-10 input-prepend inside search-form no-boarder">
            <span class="add-on"> <span class="iconset top-search"></span></span>
            <%= form_tag admin_search_path, method: 'get', style: "float: left;" do %>
              <%= text_field_tag :search, params[:search], class: "no-boarder", placeholder: "Search something...", autocomplete: "off", autocorrect: "off", autocapitalize: "off", style: "width: 250px;" %>
            <% end %>
          </li>
        </ul>
      </div><%# /pull-left %>

      <% if current_user %>
        <div class="pull-right">
          <div class="profile-menu">
            <div class="menu-item">
              <li><%= link_to "Change log", admin_changelog_path %></li>
            </div>
          </div>
          <div class="profile-menu">
            <a href="#" class="dropdown-toggle" id="my-task-list" data-placement="bottom"  data-content='' data-toggle="dropdown" data-original-title="Notifications">
              <div class="user-details">
                <div class="username"><%= current_user.first_name %> <span class="bold"><%= current_user.last_name %></span> </div>
              </div>
              <div class="iconset top-down-arrow"></div>
            </a>

            <div id="notification-list" style="display:none">
              <div style="width:300px">
                <p style="text-align: center;">No notifications to display</p>
              </div>
            </div><%# /notification-list %>

            <div class="profile-pic">
              <%= image_tag current_user.avatar_url(:small), "data-src" => "#{image_path current_user.avatar_url(:small)}", "data-src-retina" => "#{image_path current_user.avatar_url(:small2x)}", width: "35px", height: "35px" %>
            </div><%# /profile-pic %>
          </div><%# /profile-menu %>

          <ul class="nav quick-section">
            <li class="quicklinks">
              <a data-toggle="dropdown" class="dropdown-toggle pull-right" href="#" id="user-options">
                <i class="iconset top-settings-dark"></i>
              </a>
              <ul class="dropdown-menu  pull-right" role="menu" aria-labelledby="user-options">
                <li><%= link_to "My Account", edit_admin_user_path(current_user) %></li>
                <li class="divider"></li>
                <li><%= link_to content_tag(:i, "", class: "fa fa-power-off") + " Log Out", destroy_user_session_path, method: :delete %></li>
              </ul>
            </li>
          </ul><%# /quick-section %>
        </div><%# /pull-right %>
      <% end %>

    </div><%# /header-quick-nav %>
  </div><%# /navbar-inner %>
</div><%# /header %>
