<%= form_for([:admin, @link]) do |f| %>
  <%= render 'admin/shared/forms/errors', model: @link %>

  <div class="row">
    <div class="col-md-8">
      <div class="grid simple">
        <div class="grid-body">
          <div class="form-group">
            <%= f.label :title, class: "form-label" %>
            <div class="controls">
              <%= f.text_field :title, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :url, class: "form-label" %>
            <div class="controls">
              <%= f.text_field :url, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <div class="controls">
              <div class="checkbox check-primary">
                <%= f.check_box :new_window %>
                <%= f.label :new_window, "New Window?" %>
              </div>
            </div>
          </div>

          <div class="form-group">
            <div class="controls">
              <div class="checkbox check-primary">
                <%= f.check_box :show_in_footer %>
                <%= f.label :show_in_footer, "Show in Footer Links" %>
              </div>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :order, class: "form-label" %>
            <div class="controls">
              <%= f.text_field :order, class: "form-control", style: "width: 100px;" %>
            </div>
          </div>

        </div><%# /grid-body %>
      </div><%# /grid %>
    </div><%# /col-md-8 %>

    <div class="col-md-4">
      <div class="grid simple">
        <div class="grid-body">
          <% if @link.id %>
            <%= submit_tag 'Update', class: "btn btn-danger btn-block" %>
          <% else %>
            <%= submit_tag 'Save', class: "btn btn-danger btn-block" %>
          <% end %>
        </div><%# /grid-body %>
      </div><%# /grid %>
    </div><%# /col-md-4 %>
  </div><%# /row %>

<% end %><%# /form %>
