<%= form_for([:admin, @post_category]) do |f| %>
  <%= render 'admin/shared/forms/errors', model: @post_category %>

  <div class="row">
    <div class="col-md-8">
      <div class="grid simple">
        <div class="grid-body">
          <div class="form-group">
            <%= f.label :name, class: "form-label" %>
            <div class="controls">
              <%= f.text_field :name, class: "form-control slug-title" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :slug, "Permalink", class: "form-label" %>
            <%= content_tag :span, "Slug used for url must be unique ".html_safe + link_to("(edit)", "#", class: "edit-slug-btn"), class: "help" %>
            <div class="controls">
              <%= f.text_field :slug, class: "form-control slug", readonly: true %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :parent_id, "Parent", class: "form-label" %>
            <div class="controls">
              <%= f.collection_select :parent_id, PostCategory.all, :id, :name, include_blank: true %>
            </div>
          </div>

        </div><%# /grid-body %>
      </div><%# /grid %>
    </div><%# /col-md-8 %>

    <div class="col-md-4">
      <div class="grid simple">
        <div class="grid-body">
          <% if @post_category.id %>
            <%= submit_tag 'Update', class: "btn btn-danger btn-block" %>
          <% else %>
            <%= submit_tag 'Save', class: "btn btn-danger btn-block" %>
          <% end %>
        </div><%# /grid-body %>
      </div><%# /grid %>
    </div><%# /col-md-4 %>
  </div><%# /row %>

<% end %><%# /form %>
