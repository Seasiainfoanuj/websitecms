<%= form_for([:admin, @post]) do |f| %>
  <%= render 'admin/shared/forms/errors', model: @post %>

  <div class="row">
    <div class="col-md-8">
      <div class="grid simple">
        <div class="grid-body">
          <div class="form-group">
            <%= f.label :title, "Post Title", class: "form-label" %>
            <div class="controls">
              <%= f.text_field :title, class: "form-control slug-title" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :slug, "Permalink", class: "form-label" %>
            <%= content_tag :span, "Slug used for url must be unique ".html_safe + link_to("(edit)", "#", class: "edit-slug-btn"), class: "help" %>
            <div class="controls">
              <%= f.text_field :slug, class: "form-control slug", readonly: true %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :content, class: "form-label" %>
            <div class="controls">
              <%= f.text_area :content, class: "form-control editor" %>
            </div>
          </div>

        </div><%# /grid-body %>
      </div><%# /grid %>

      <div class="grid simple">
        <div class="grid-title no-border">
          <h4>Meta Information</h4>
          <div class="tools">
            <a href="javascript:;" class="collapse"></a>
          </div>
        </div>
        <div class="grid-body no-border">

          <div class="form-group">
            <%= f.label :meta_keywords, class: "form-label" %>
            <%= content_tag :span, "Seperate by comma i.e. sample,keywords", class: "help" %>
            <div class="controls">
              <%= f.text_field :meta_keywords, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :meta_description, class: "form-label" %>
            <%= content_tag :span, "155 Characters or less", class: "help" %>
            <div class="controls">
              <%= f.text_area :meta_description, class: "form-control" %>
            </div>
          </div>

        </div><%# /grid-body %>
      </div><%# /grid %>
    </div><%# /col-md-8 %>

    <div class="col-md-4">
      <div class="grid simple">
        <div class="grid-title no-border">
          <h4>Publish</h4>
          <div class="tools">
            <a href="javascript:;" class="collapse"></a>
          </div>
        </div>
        <div class="grid-body no-border">

          <div class="form-group">
            <%= f.label :visibility, class: "form-label" %>
            <div class="controls">
              <%= f.collection_select :visibility, Post::VISIBILITIES, :to_s, Proc.new {|v| v.to_s.humanize} %>
            </div>
          </div>

          <% if @post.status == "published" %>
            <div class="form-group">
              <%= f.label :status, class: "form-label" %>
              <div class="controls">
                <%= f.collection_select :status, Post::STATUSES, :to_s, Proc.new {|v| v.to_s.humanize} %>
              </div>
            </div>
          <% end %>

          <% if @post.id %>
            <%= submit_tag 'Update', class: "btn btn-success btn-cons" %>
          <% else %>
            <%= submit_tag 'Save Draft', class: "btn btn-white btn-cons" %>
          <% end %>

          <%= submit_tag 'Publish', :name => 'publish', class: "btn btn-danger btn-cons" unless @post.status == "published" %>
        </div><%# /grid-body %>
      </div><%# /grid %>

      <div class="grid simple">
        <div class="grid-title no-border">
          <h4>Post Attributes</h4>
          <div class="tools">
            <a href="javascript:;" class="collapse"></a>
          </div>
        </div>
        <div class="grid-body no-border">
          <div class="form-group">
            <%= f.label :categories, class: "form-label" %>
            <div class="controls">
              <%= nested_post_categories_select PostCategory.arrange(:order => :created_at), @post %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :order, class: "form-label" %>
            <div class="controls">
              <%= f.text_field :order, class: "form-control", style: "width: 100px;" %>
            </div>
          </div>

        </div><%# /grid-body %>
      </div><%# /grid %>

      <div class="grid simple closed">
        <div class="grid-title no-border">
          <h4>Author</h4>
          <div class="tools">
            <a href="javascript:;" class="expand"></a>
          </div>
        </div>
        <div class="grid-body no-border">

          <div class="form-group">
            <div class="controls">
              <%= f.collection_select :author_id, User.where(role: "admin"), :id, :name, selected: "#{@post.author ? @post.author.id : current_user.id}" %>
            </div>
          </div>

        </div><%# /grid-body %>
      </div><%# /grid %>

    </div><%# /col-md-4 %>

  </div><%# /row %>

<% end %><%# /form %>
