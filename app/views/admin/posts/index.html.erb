<%= render 'admin/shared/header' %>

<div class="page-container row">
  <%= render 'admin/shared/sidebar' %>

  <div class="page-content">
    <div class="content">
      <div class="page-title">
        <i class="fa fa-thumb-tack"></i>
        <h3>Posts <%= link_to 'Add New', new_admin_post_path, class: "btn btn-primary btn-mini" %></h3>
      </div>

      <div class="row">
        <div class="col-md-12">
          <div class="grid simple">
            <div class="grid-title no-border">
              <h4>Posts</h4>

              <div class="bulk-options">
                <%= form_tag bulk_destroy_admin_posts_path, id: "bulk-destroy-form", class: "bulk-action-form" do %>
                  <%= submit_tag "Remove Selected", name: nil, id: "bulk-destroy-btn", class: "btn btn-mini btn-danger" %>
                <% end %>
              </div>
            </div>

            <div class="grid-body no-border">
              <%= render 'table' %>
              <%= render 'admin/shared/pagination', model: @posts %>
            </div><!-- /grid-body -->
          </div><!-- /grid -->
        </div><!-- /col-md-12 -->
      </div><!-- /row -->
    </div><!-- /content -->
  </div><!-- /page-content -->

</div><!-- /page-container -->
