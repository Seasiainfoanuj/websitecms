<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <div class="p-t-20 p-l-30 p-r-30 xs-p-t-10 xs-p-l-10">
    <h2>Forgot your password?</h2>
    <% if notice %>
      <p class="notice"><%= notice %></p>
    <% end %>
    <% if alert %>
    <p class="alert"><%= alert %></p>
    <% end %>
    <%= devise_error_messages! %>
  </div>

  <div class="tiles white p-t-10 p-b-20">
    <div class="row p-t-10 m-l-20 m-r-20 xs-m-l-10 xs-m-r-10">
      <div class="col-md-6 col-sm-6 ">
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email" %>
      </div>
    </div>
    <div class="row p-t-20 m-l-20 m-r-20 xs-m-l-10 xs-m-r-10">
      <div class="control-group">
        <div class="col-md-6 col-sm-6 ">
          <%= f.submit "Send me reset password instructions", class: "btn btn-primary btn-cons" %>
        </div>
      </div>
    </div>

    <div class="row p-t-20 p-b-20 m-l-20 m-r-20 xs-m-l-10 xs-m-r-10">
      <div class="col-md-12">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
<% end %>
